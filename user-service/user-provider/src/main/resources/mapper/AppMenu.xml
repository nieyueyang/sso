<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
 
<mapper namespace="com.appMenu">

	<resultMap id="appMenuResult" type="com.deyun.user.dto.AppMenu">
		<result column="id" property="id"/>
		<result column="menu_code" property="menuCode"/>
		<result column="menu_name" property="menuName"/>
		<result column="menu_type" property="menuType"/>
		<result column="parent_id" property="parentId"/>
		<result column="path" property="path"/>
		<result column="sort" property="sort"/>
		<result column="icon" property="icon"/>
		<result column="remark" property="remark"/>
		<result column="create_account" property="createAccount"/>
		<result column="create_name" property="createName"/>
		<result column="create_date" property="createDate"/>
		<result column="modify_account" property="modifyAccount"/>
		<result column="modify_date" property="modifyDate"/>
	</resultMap>

	<sql id="selectAllItems">
		id,menu_code,menu_name,menu_type,parent_id,path,sort,icon,remark,create_account,create_name,
		create_date,modify_account,modify_date
	</sql>

	<select id="selectForList" resultMap="appMenuResult">
		select <include refid="selectAllItems"/>
		from app_menu
		<include refid="menu_getPage_sql"/>
	</select>

	<sql id="menu_getPage_sql">
		<where>
			<if test="id and id != ''">
				and id = #{id}
			</if>
			<if test="menuCode and menuCode != ''">
				and menu_code = #{menuCode}
			</if>
			<if test="menuName and menuName != ''">
				and menu_name = #{menuName}
			</if>
			<if test="parentId and parentId != ''">
				and parent_id = #{parentId}
			</if>
			<if test="path and path != ''">
				and path = like concat('%', #{path}, '%')
			</if>

			<!--<if test="type and type != ''">-->
				<!--and  bitor(type,#{type})=type-->
			<!--</if>-->

		</where>
	</sql>

  



  


	
	



      
</mapper>