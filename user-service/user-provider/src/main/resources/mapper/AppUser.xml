<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
 
<mapper namespace="com.appuser">

	<resultMap id="appUserResult" type="com.deyun.user.dto.AppUser">
		<result column="id" property="id"/>
		<result column="account" property="account"/>
		<result column="name" property="name"/>
		<result column="salt" property="salt"/>
		<result column="parent_id" property="parentId"/>
		<result column="sex" property="sex"/>
		<result column="phone" property="phone"/>
		<result column="email" property="email"/>
		<result column="company_id" property="companyId"/>
		<result column="source" property="source"/>
		<result column="create_account" property="createAccount"/>
		<result column="create_name" property="createName"/>
		<result column="create_date" property="createDate"/>
		<result column="modify_account" property="modifyAccount"/>
		<result column="modify_date" property="modifyDate"/>
	</resultMap>

   <resultMap id="appUserExtendResult" type="com.deyun.user.dto.AppUser" extends="appUserResult">
			<result column="password" property="password"/>
  </resultMap>
    
  <sql id="selectAllItems">
  	id, account,name,password,salt,parent_id, sex, phone,email,company_id,source,
  	create_account,create_name,create_date,modify_account,modify_date
  </sql>

	<select id="selectByAccount" resultMap="appUserExtendResult">
		select <include refid="selectAllItems"/>
		from app_user where account = #{account}
	</select>

  <select id="queryUser" resultMap="appUserResult">
     SELECT <include refid="selectAllItems"/>
      FROM base_user

      <include refid="user_getPage_sql"/>
      ORDER BY CREATE_TIME DESC
  </select>

	<sql id="user_getPage_sql">
		<where>
			<if test="id and id != ''">
				and id = #{id}
			</if>
			<if test="userCode and userCode != ''">
				and user_code = #{userCode}
			</if>
			<!--<if test="type and type != ''">-->
				<!--and  bitor(type,#{type})=type-->
			<!--</if>-->

		</where>
	</sql>

  



  


	
	



      
</mapper>